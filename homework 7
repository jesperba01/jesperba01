#task 3

def simple_calculator():
    options = input("input opperator")
    firstNumber = int(input("input first number:"))
    secondNumber = int(input("input second number:"))

    if options == "+":
        result = firstNumber + secondNumber
        print("Answer: ", result)
    elif options == "-":
        result = firstNumber - secondNumber
        print("Answer: ", result)
    elif options == "*":
        result = firstNumber * secondNumber
        print("Answer: ", result)
    elif options == "/":
        result = firstNumber / secondNumber
        print("Answer: ", result)

print(simple_calculator())        
